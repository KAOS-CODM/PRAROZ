{
  "hosting": {
    "public": "html",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/home.html"
      }
    ],
    "predeploy": [
      "cmd /c minify_css.bat",
      "cmd /c minify_js.bat"
    ]
  }
}
